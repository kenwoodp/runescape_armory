                        <form action="/item/helmets/<%= helmet['id'] %>/<%= helmet['xp_required'].to_i - item['xp_value'].to_i %>" method="POST">
                            <input type="hidden" name="_method" value="put">
                            <input type="hidden" name="inventory_id" value="<%= item['id'] %>">
                            <button><img src="<%= helmet['image_url'] %>" alt=""></button>
                        </form>
                    </div>
                <% end %>
            <% elsif item['name'].include? 'Platebody' %>
                <% platebodies[level_index..-1].each do |platebody| %>
                    <div class="platebodies">
                                
                        <p><%= platebody['name'] %></p>
