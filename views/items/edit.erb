                        <form action="/item/platelegs/<%= plateleg['id'] %>/<%= plateleg['xp_required'].to_i - item['xp_value'].to_i %>" method="POST">
                            <input type="hidden" name="_method" value="put">
                            <input type="hidden" name="inventory_id" value="<%= item['id'] %>">
                            <button><img src="<%= plateleg['image_url'] %>" alt=""></button>
                        </form>
                    </div>
                <% end %>
            <% end %>
        </div>
    </div>
</div>

