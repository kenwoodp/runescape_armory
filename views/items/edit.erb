<div class="page-wrap">
    <div class="upgrade">
        <header class="top-header">
            <div>
                <p><a href="/">Back to shop...</a></p>
            </div>
            <div>
                <h1>Upgrade Your Item</h1>
                <h3><%= item['name'] %></h3>
                <img src="<%= item['image_url'] %>" alt="">
            </div>
            <div>
                <p>Current XP: <%= current_user()['xp'] %></p>
            </div>
        </header>


        <div class="items">
            <% if item['name'].include? 'Sword' %>
                <% swords[level_index..-1].each do |sword| %>
                    <div class="swords">
                        
                        <p><%= sword['name'] %></p>
                        <p>Cost: <span class="price"><%= sword['xp_required'].to_i - item['xp_value'].to_i %>XP</span></p>
                        <form action="/item/swords/<%= sword['id'] %>/<%= sword['xp_required'].to_i - item['xp_value'].to_i %>" method="POST">
                            <input type="hidden" name="_method" value="put">
                            <input type="hidden" name="inventory_id" value="<%= item['id'] %>">
                            <button><img src="<%= sword['image_url'] %>" alt=""></button>
                        </form>
                    </div>
                <% end %>
            <% elsif item['name'].include? 'Scimitar' %>
                <% scimitars[level_index..-1].each do |scimitar| %>
                    <div class="scimitars">
                        
                        <p><%= scimitar['name'] %></p>
                        <p>Cost: <span class="price"><%= scimitar['xp_required'].to_i - item['xp_value'].to_i %>XP</span></p>
                        <form action="/item/scimitars/<%= scimitar['id'] %>/<%= scimitar['xp_required'].to_i - item['xp_value'].to_i %>" method="POST">
                            <input type="hidden" name="_method" value="put">
                            <input type="hidden" name="inventory_id" value="<%= item['id'] %>">
                            <button><img src="<%= scimitar['image_url'] %>" alt=""></button>
                        </form>
                    </div>
                <% end %>
            <% elsif item['name'].include? 'Dagger' %>
